{
  "openapi": "3.0.0",
  "info": {
    "title": "API Cardapio Virtual",
    "version": "1.0.0"
  },
  "paths": {
    "/": {
      "get": {
        "summary": "Rota Padrão",
        "responses": {
          "200": {
            "description": "Rota de boas vindas a API"
          }
        }
      }
    },
    "/produto": {
      "post": {
        "summary": "Criar produto",
        "tags": [
          "Produto"
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "nome": {
                    "type": "string",
                    "example": "Filé de frango"
                  },
                  "precoUnitario": {
                    "type": "number",
                    "example": 29.9
                  },
                  "complementos": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "nome": {
                          "type": "string",
                          "example": "Arroz"
                        }
                      }
                    }
                  },
                  "descricao": {
                    "type": "string",
                    "example": "Filé de frango com arroz, fritas e macarrão."
                  }
                },
                "required": [
                  "nome",
                  "preco"
                ]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Produto criado com sucesso"
          },
          "400": {
            "description": "Dados inválidos"
          },
          "500": {
            "description": "Erro interno do servidor"
          }
        }
      }
    }
  }
}